@model IEnumerable<OneClickMultipleTransfer.Models.TransferDetails>
@{
    ViewBag.Title = "TransferCompleted";
}

<h2>Transfer Summary</h2>

    <div class="row">
        
        <div class="col-md-4">
            <table class="table">
                <tr>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.PayeeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TransferAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TransferStatus)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>                       
                        <td>
                            @Html.DisplayFor(modelItem => item.PayeeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransferAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransferStatus)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>



@model OneClickMultipleTransfer.Models.AccountViewModel

@{
    ViewBag.Title = "DisplayAccountBalance";
}

<h2>Account Balance</h2>


@using (Html.BeginForm("InitiateTransfer", "Transfer", FormMethod.Get))
{

<table class="table">
    <tr>
        <th></th>
    </tr>

    <tr>
        <td>
            <div class="form-group">
                @Html.Label("Account Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.AccountList[0].Nickname, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="form-group">
                @Html.Label("Account Number", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.AccountList[0].AccountId, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="form-group">
                @Html.Label("Balance", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.AccountList[0].Currency, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </td>

    </tr>
    <tr>
        <td>
            <div class="form-group">
                <input type="submit" class="btn btn-primary form-control" value="Multiple Transfer" />
            </div>
        </td>
    </tr>

</table>
}